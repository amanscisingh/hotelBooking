                    console.log(data);
                    if (data.message === 'Room is available') {
                        alert('Room is available. \nClick OK to proceed on booking page.');
                        window.location.href = `/rooms/${roomId}?bool=true`;
                    } else {
                        alert('Room is Not Available. \nPlease Check for another Date.');
