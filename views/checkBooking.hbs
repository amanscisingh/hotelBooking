<div style="margin: 0 auto; width: 90%;">
    <form method="get">
    <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input type="email" name="email" value="{{email}}" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<hr>

{{#if allBookings}}
<div class="col-12">
    <div class="card">
        <div class="card-header">
            <span style="float: left;"><h4 class="card-title">All Bookings</h4> </span>
        </div>
        <div class="card-body">
            <div class="table-responsive" style="text-align: center; height: 100vh;">
                <table id="dtBasicExample" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th class="th-sm">User Name</th>
                            <th class="th-sm">Email</th>
                            <th class="th-sm">Mob No.</th>
                            <th class="th-sm">Adults</th>
                            <th class="th-sm">Children</th>
                            <th class="th-sm">CheckIn</th>
                            <th class="th-sm">CheckOut</th>
                            <th class="th-sm">Total Amount</th>
                            <th class="th-sm">Paid Amount</th>
                            <th class="th-sm">Time Since Booking (Hours)</th>
                            <th class="th-sm">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each allBookings}}                       
                            <tr>
                                <td>{{this.userName}}</td>
                                <td>{{this.email}}</td>
                                <td>{{this.mobile}}</td>
                                <td>{{this.adults}}</td>
                                <td>{{this.children}}</td>
                                <td>{{this.checkIn}}</td>
                                <td>{{this.checkOut}}</td>
                                <td>{{this.totalAmount}}</td>
                                <td>{{this.amountPaid}}</td>
                                <td>{{timeElapsedFromNow this.updatedAt}}</td>
                                <td>{{this.status}}</td>
                
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{{/if}}

